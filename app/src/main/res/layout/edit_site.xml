<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="250dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/siteName_Create"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Site Name"
            android:inputType="textPersonName"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/siteLatitude_Create"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_below="@+id/siteName_Create"
            android:layout_toEndOf="@+id/textView11"
            android:ems="10"
            android:gravity="center"
            android:hint="latitude"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/siteLongitude_Create"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_below="@+id/siteName_Create"
            android:layout_toEndOf="@+id/textView12"
            android:ems="10"
            android:gravity="center"
            android:hint="longitude"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/siteHeight_Create"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/siteLatitude_Create"
            android:layout_toEndOf="@+id/textView13"
            android:ems="10"
            android:gravity="center"
            android:hint="height"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:text="30"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/status_Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/siteLongitude_Create"
            android:layout_below="@+id/siteLongitude_Create"
            android:layout_toEndOf="@+id/siteLatitude_Create"
            android:buttonTintMode="add"
            android:checked="false"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:text="Status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/status_Create"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/siteHeight_Create"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="ALPHA"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/alphaAzimuth_Create"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/textView5"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:padding="2dp"
            android:text="0"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/alphaTilt_Create"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/textView8"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:text="2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/status_Create"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/alphaAzimuth_Create"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="BETA"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/betaAzimuth_Create"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/textView6"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:padding="2dp"
            android:text="120"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/betaTilt_Create"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/textView12"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:text="2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/status_Create"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/betaAzimuth_Create"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="GAMMA"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/gammaAzimuth_Create"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/textView7"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:padding="2dp"
            android:text="240"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/gammaTilt_Create"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/textView10"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="2dp"
            android:text="2"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/saveChanges_Create"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/gammaAzimuth_Create"
            android:src="@drawable/ic_check_black_48dp"
            android:tint="@android:color/holo_green_dark" />

        <ImageButton
            android:id="@+id/cancelChanges_Create"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/gammaTilt_Create"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_close_black_48dp"
            android:tint="@android:color/holo_red_dark" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/status_Create"
            android:layout_alignTop="@+id/siteHeight_Create"
            android:layout_toEndOf="@+id/siteHeight_Create"
            android:gravity="center"
            android:text="mts."
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alphaAzimuth_Create"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/alphaAzimuth_Create"
            android:gravity="center"
            android:text="Azimuth:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/betaAzimuth_Create"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/betaAzimuth_Create"
            android:gravity="center"
            android:text="Azimuth:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gammaAzimuth_Create"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/gammaAzimuth_Create"
            android:gravity="center"
            android:text="Azimuth:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/alphaAzimuth_Create"
            android:layout_alignTop="@+id/alphaTilt_Create"
            android:layout_toEndOf="@+id/alphaAzimuth_Create"
            android:gravity="center"
            android:text="Tilt:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/betaTilt_Create"
            android:layout_alignTop="@+id/betaAzimuth_Create"
            android:layout_toEndOf="@+id/betaAzimuth_Create"
            android:gravity="center"
            android:text="Tilt:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gammaAzimuth_Create"
            android:layout_alignTop="@+id/gammaTilt_Create"
            android:layout_toEndOf="@+id/gammaAzimuth_Create"
            android:gravity="center"
            android:text="Tilt:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/siteLatitude_Create"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/siteName_Create"
            android:gravity="center"
            android:text="Lat:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/siteLatitude_Create"
            android:layout_below="@+id/siteName_Create"
            android:layout_toEndOf="@+id/siteLatitude_Create"
            android:gravity="center"
            android:text="Lng:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/siteHeight_Create"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/siteHeight_Create"
            android:gravity="center"
            android:text="Height:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>